server {
    listen 80;
    server_name learningdjango.in;

    access_log   /var/log/nginx/learningdjango.access.log;
    error_log    /var/log/nginx/learningdjango.error.log;

    location = /favicon.ico { access_log off; log_not_found off; }

    location /static/ {
        alias /home/chinmaya/Projects/LearningDjango/apps/static/;
    }

    location /media/ {
        alias /home/chinmaya/Projects/LearningDjango/apps/media/;
    }

    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header X-Forwarded-Host $server_name;
        proxy_set_header X-Real-IP $remote_addr;
        add_header P3P 'CP="ALL DSP COR PSAa PSDa OUR NOR ONL UNI COM NAV"';
    }
}
